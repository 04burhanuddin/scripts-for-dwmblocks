#!/bin/sh

MOON=$(curl -s 'wttr.in/Moon?format=%m')

if [ -z "$MOON" ]; then
  printf "\ue0b7ðŸŒ‘ \n"
  exit 1
fi

case "$MOON" in
"ðŸŒ‘") PHASE="New Moon" ;;
"ðŸŒ’") PHASE="Waxing Crescent" ;;
"ðŸŒ“") PHASE="First Quarter" ;;
"ðŸŒ”") PHASE="Waxing Gibbous" ;;
"ðŸŒ•") PHASE="Full Moon" ;;
"ðŸŒ–") PHASE="Waning Gibbous" ;;
"ðŸŒ—") PHASE="Last Quarter" ;;
"ðŸŒ˜") PHASE="Waning Crescent" ;;
*) PHASE="Unknown" ;;
esac

printf "\ue0b7%s \n" "$MOON"
